
@using mm.Models
@model EditTeamPerson

<style>
    .input-validation-error {
        border: 1px solid #b94a48;
    }
</style>
<div>
    <h1>First Time Here</h1>
    <p>Please select your team and fill in the blanks, click Ok and you'll be part of something great!</p>


    @using (@Html.BeginForm("NewUser", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        @if (!string.IsNullOrWhiteSpace(Model.Message))
        {
            <div class="alert alert-danger">
                <strong>Error</strong> @Model.Message
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(m => m.Teams, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(x => x.TeamId, Model.Teams, null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Join your teams Breakfast Club</button>
            </div>
        </div>
    }
</div>